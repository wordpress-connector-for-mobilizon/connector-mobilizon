{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:ava/recommended",
    "plugin:@wordpress/eslint-plugin/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "ava"
  ],
  "ignorePatterns": [
    "gulpfile.js"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "no-console": [
      "error", {
        "allow": ["error"]
      }
    ],
    "prettier/prettier": [
      "off"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/jsx-key": [
      "off"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
